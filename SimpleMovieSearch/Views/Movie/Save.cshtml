@model SimpleMovieSearch.Domain.ViewModels.Movie.MovieViewModels




<form asp-controller="Movie" asp-action="Save" enctype="multipart/form-data" id="formSaveCar">
    <input asp-for="Id" hidden />
    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>

    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Name" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Slogan" class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Slogan"/>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Country" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Country" />
        </div>
    </div>
   
    <div class="row">
       @* <div class="form-group col-md-6">
            <label asp-for="@Model.MoviesCategory" class="col-form-label"></label>
            <select asp-for="@Model.MoviesCategory" class="form-control" id="carTypeId"></select>
        </div>*@
        <div class="form-group col-md-6">
            <label class="col-form-label">Изображение</label>
            <input asp-for="@Model.Image" class="form-control" type="file">
        </div>
    </div>
</form>

